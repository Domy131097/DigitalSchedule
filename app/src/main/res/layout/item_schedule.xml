<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlScheduleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tvDayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dayNameMarginLeftRight"
            android:layout_marginRight="@dimen/dayNameMarginLeftRight"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/scheduleHorizontalLineMargin"
            android:layout_toStartOf="@id/tvDayName"
            android:background="@color/colorAccent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/scheduleHorizontalLineMargin"
            android:layout_toEndOf="@id/tvDayName"
            android:background="@color/colorAccent"
            />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:layout_marginStart="@dimen/itemScheduleCardMargin"
        android:layout_marginEnd="@dimen/itemScheduleCardMargin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lectureListHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/lectureListHeaderPadding"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/courseNameTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLecturesType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/lectureListHeaderPadding"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/lecturesTypeTextSize" />
            </LinearLayout>


            <ImageView
                android:id="@+id/ivTimeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lectureListHeaderLayout"
                android:layout_toStartOf="@id/tvLengthOfLectures"
                app:srcCompat="@drawable/ic_schedule_orange" />

            <TextView
                android:id="@+id/tvLengthOfLectures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivTimeIcon"
                android:layout_alignBottom="@+id/ivTimeIcon"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/itemScheduleListPadding"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivPlaceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivTimeIcon"
                android:layout_toStartOf="@id/tvLocationOfLectures"
                app:srcCompat="@drawable/ic_place_orange" />

            <TextView
                android:id="@+id/tvLocationOfLectures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivPlaceIcon"
                android:layout_alignBottom="@+id/ivPlaceIcon"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/itemScheduleListPadding"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivRoomIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivPlaceIcon"
                android:layout_toStartOf="@id/tvHallOfLectures"
                app:srcCompat="@drawable/ic_room_orange" />

            <TextView
                android:id="@+id/tvHallOfLectures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivRoomIcon"
                android:layout_alignBottom="@+id/ivRoomIcon"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/itemScheduleListPadding"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>